@model IEnumerable<EntitiesLayer.User>
<a asp-action="Create" asp-controller="User"  class="btn btn-primary">Yeni Kayit</a> 
<div class="card">
    <div class="card-header">
        <h3>Kullanicilar</h3>
    </div>
    <div class="card-body">
        <table class="table table-hover" id="myTable">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Email</td>
                    <td></td>
                    <td></td>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.TcNo</td>                    
                        <td><a asp-action="Edit" asp-controller="User" class="btn btn-success" asp-route-Id="@user.Id">Update</a> </td>
                        <td><a asp-action="Delete" asp-controller="Kullanici" class="btn btn-danger" asp-route-Id="@user.Id">Delete</a> </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



<script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });

</script>
